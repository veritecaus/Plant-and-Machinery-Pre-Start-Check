<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?attr/actionBarSize">

    <TextView
        android:id="@+id/textViewFragmentLoginSupervisorWelcom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/welcome"
        android:textSize="@dimen/prestart_standard_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewFragmentLoginSupervisorName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:text="@string/name"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewFragmentLoginSupervisorWelcom" />

    <Spinner
        android:id="@+id/spinnerFragmentLoginSupervisorName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="64dp"
        app:layout_constraintBottom_toBottomOf="@+id/textViewFragmentLoginSupervisorName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewFragmentLoginSupervisorName"
        app:layout_constraintTop_toTopOf="@+id/textViewFragmentLoginSupervisorName" />

    <TextView
        android:id="@+id/textViewFragmentLoginSupervisorPin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="@string/fragment_login_caption"
        android:textSize="@dimen/prestart_standard_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textViewFragmentLoginSupervisorName"
        app:layout_constraintTop_toBottomOf="@+id/textViewFragmentLoginSupervisorName" />

    <TextView
        android:id="@+id/textViewFragmentLoginSupervisorLoggedIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/fragment_login_caption_login"
        android:textSize="@dimen/prestart_standard_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewFragmentLoginSupervisorPin" />

    <TextView
        android:id="@+id/textViewFragmentLoginSupervisorLastLoginDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="1 May 2021"
        android:textSize="@dimen/prestart_standard_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewFragmentLoginSupervisorLoggedIn" />

    <TextView
        android:id="@+id/textViewFragmentLoginSupervisorMachine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/machine"
        android:textSize="@dimen/prestart_standard_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewFragmentLoginSupervisorLastLoginDate" />

    <EditText
        android:id="@+id/editTextFragmentLoginSupervisorPin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:inputType="numberPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewFragmentLoginSupervisorMachine" />

    <Button
        android:id="@+id/buttonFragmentLoginSupervisorCancel"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_marginTop="40dp"
        android:text="@android:string/cancel"
        app:layout_constraintEnd_toStartOf="@+id/buttonFragmentLoginSupervisorOK"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextFragmentLoginSupervisorPin"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/buttonFragmentLoginSupervisorOK"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:text="@android:string/ok"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonFragmentLoginSupervisorCancel"
        app:layout_constraintTop_toTopOf="@+id/buttonFragmentLoginSupervisorCancel"
        android:layout_marginBottom="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>