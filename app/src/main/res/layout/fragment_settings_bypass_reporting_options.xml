<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?attr/actionBarSize">

    <TextView
        android:id="@+id/textViewFragmentSettingsBypassReportOptionsRep1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:text="@string/fragment_settings_reporting_option_recipient_1"
        android:textSize="@dimen/prestart_standard_text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewFragmentSettingsBypassReportOptionsMessage1" />

    <EditText
        android:id="@+id/editTextFragmentSettingsBypassReportOptionsRep1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="@dimen/prestart_standard_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textViewFragmentSettingsBypassReportOptionsRep1"
        app:layout_constraintTop_toBottomOf="@+id/textViewFragmentSettingsBypassReportOptionsRep1" />

    <TextView
        android:id="@+id/textViewFragmentSettingsBypassReportOptionsRep2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/fragment_settings_reporting_option_recipient_2"
        android:textSize="@dimen/prestart_standard_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/editTextFragmentSettingsBypassReportOptionsRep1"
        app:layout_constraintTop_toBottomOf="@+id/editTextFragmentSettingsBypassReportOptionsRep1" />

    <EditText
        android:id="@+id/editTextFragmentSettingsBypassReportOptionsRep2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="@dimen/prestart_standard_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textViewFragmentSettingsBypassReportOptionsRep2"
        app:layout_constraintTop_toBottomOf="@+id/textViewFragmentSettingsBypassReportOptionsRep2" />

    <TextView
        android:id="@+id/textViewFragmentSettingsBypassReportOptionsRep3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/fragment_settings_reporting_option_recipient_3"
        android:textSize="@dimen/prestart_standard_text_size"
        app:layout_constraintStart_toStartOf="@+id/editTextFragmentSettingsBypassReportOptionsRep2"
        app:layout_constraintTop_toBottomOf="@+id/editTextFragmentSettingsBypassReportOptionsRep2" />

    <EditText
        android:id="@+id/editTextFragmentSettingsBypassReportOptionsRep3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="@dimen/prestart_standard_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textViewFragmentSettingsBypassReportOptionsRep3"
        app:layout_constraintTop_toBottomOf="@+id/textViewFragmentSettingsBypassReportOptionsRep3" />

    <TextView
        android:id="@+id/textViewFragmentSettingsBypassReportOptionsRep4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/fragment_settings_reporting_option_recipient_4"
        android:textSize="@dimen/prestart_standard_text_size"
        app:layout_constraintStart_toStartOf="@+id/editTextFragmentSettingsBypassReportOptionsRep3"
        app:layout_constraintTop_toBottomOf="@+id/editTextFragmentSettingsBypassReportOptionsRep3" />

    <EditText
        android:id="@+id/editTextFragmentSettingsBypassReportOptionsRep4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textViewFragmentSettingsBypassReportOptionsRep4"
        app:layout_constraintTop_toBottomOf="@+id/textViewFragmentSettingsBypassReportOptionsRep4" />

    <Spinner
        android:id="@+id/spinnerFragmentSettingsBypassReportOptionsFreq"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewFragmentSettingsBypassReportOptionsFreq"
        app:layout_constraintTop_toTopOf="@+id/textViewFragmentSettingsBypassReportOptionsFreq" />

    <TextView
        android:id="@+id/textViewFragmentSettingsBypassReportOptionsFreq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/fragment_settings_reporting_option_frequency"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="@+id/editTextFragmentSettingsBypassReportOptionsRep4"
        app:layout_constraintTop_toBottomOf="@+id/editTextFragmentSettingsBypassReportOptionsRep4" />

    <TextView
        android:id="@+id/textViewFragmentSettingsBypassReportOptionsMessage1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:text="@string/fragment_settings_reporting_option_message_one"
        android:textSize="@dimen/prestart_standard_text_size"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>