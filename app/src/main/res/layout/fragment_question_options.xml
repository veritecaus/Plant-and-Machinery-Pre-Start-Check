<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?attr/actionBarSize">

    <TextView
        android:id="@+id/textViewFragmentQuestionOptionsTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="This is an option question."
        android:textSize="@dimen/prestart_standard_text_size"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewFragmentQuestionOptionsImage1"
        android:layout_width="256sp"
        android:layout_height="256sp"
        android:layout_marginTop="32dp"

        app:layout_constraintEnd_toStartOf="@+id/imageViewFragmentQuestionOptionsImage2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewFragmentQuestionOptionsComment"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/buttonFragmentOptionsOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/fragment_question_options_button_option_1"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/imageViewFragmentQuestionOptionsImage1"
        app:layout_constraintStart_toStartOf="@+id/imageViewFragmentQuestionOptionsImage1"
        app:layout_constraintTop_toBottomOf="@+id/imageViewFragmentQuestionOptionsImage1" />

    <ImageView
        android:id="@+id/imageViewFragmentQuestionOptionsImage2"
        android:layout_width="256sp"
        android:layout_height="256sp"
        android:layout_marginStart="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageViewFragmentQuestionOptionsImage1"
        app:layout_constraintTop_toTopOf="@+id/imageViewFragmentQuestionOptionsImage1"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/buttonFragmentOptionsTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fragment_question_options_button_option_2"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/imageViewFragmentQuestionOptionsImage2"
        app:layout_constraintStart_toStartOf="@+id/imageViewFragmentQuestionOptionsImage2"
        app:layout_constraintTop_toTopOf="@+id/buttonFragmentOptionsOne" />

    <Button
        android:id="@+id/buttonFragmentOptionsNone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/fragment_question_options_button_option_none"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonFragmentOptionsOne" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/fragment_question_options_expand_photos"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonFragmentOptionsNone" />

    <TextView
        android:id="@+id/textViewFragmentQuestionOptionsStatus"
        android:layout_width="wrap_content"
        android:layout_height="100sp"
        android:text="Question 3 of 40"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewFragmentQuestionOptionsComment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Comment"
        android:textSize="@dimen/prestart_standard_text_size_smaller"
        app:layout_constraintEnd_toEndOf="@+id/textViewFragmentQuestionOptionsTitle"
        app:layout_constraintStart_toStartOf="@+id/textViewFragmentQuestionOptionsTitle"
        app:layout_constraintTop_toBottomOf="@+id/textViewFragmentQuestionOptionsTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>